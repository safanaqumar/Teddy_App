<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Report_of_monitor">

    <org.eazegraph.lib.charts.PieChart

        android:id="@+id/piechart1"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="350dp"
        android:layout_margin="10dp">

    </org.eazegraph.lib.charts.PieChart>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/viewfinder_laser"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cases"
            android:gravity="center"
            android:textSize="12dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:textSize="14dp"
            android:text="0"
            android:textColor="@color/gray"></TextView>


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/cardViewGraph1"
        app:cardCornerRadius="5dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="6dp"
                    android:gravity="top">
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:background="@color/viewfinder_mask"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispose"
                        android:textSize="12dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/dispose"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:textSize="14dp"
                        android:text="0"
                        android:textColor="@color/gray"></TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="8dp">
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faulty"
                        android:textSize="12dp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/Faulty"
                        android:gravity="end"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-light"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="8dp">
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/design_default_color_on_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Available"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/Available"
                        android:gravity="end"
                        android:layout_alignParentRight="true"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif-light"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="8dp"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned"
                        android:textSize="12dp"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/Assigned"
                        android:gravity="end"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif-light"></TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
<Button
    android:id="@+id/backbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Back"
    android:textColor="@color/white"
    android:background="@color/black"
    android:layout_gravity="center"
    android:layout_marginTop="30dp">


</Button>
</LinearLayout>